@model Library

@{
    ViewData["Title"] = "Book List";
}

<style>
    table, th, td {
        border: 1px solid blue;
        border-collapse: collapse;
        font-size: 20px;
    }

    th {
        background-color: #96D4D4;
    }
</style>

<h1>Book List</h1>
<h2>To Add/Edit a Book, click on the Add/Edit Book on the top navigation bar.</h2>


<div class="text-center">
    <table id="table">
        <tr>
            <td>Book Title</td>
            <td>Book Category</td>
            <td>Date Published (MMDDYY)</td>
            <td>Author Name</td>
            @{
                int i = 0;
            }
        </tr>
        @foreach (Book b in Model.books.Books)
        {
            <tr>
                <td>@Html.EditorFor(x => x.books.Books.ElementAt(i).title)</td>
                <td>@Html.EditorFor(x => x.books.Books.ElementAt(i).category)</td>
                <td>@Html.EditorFor(x => x.books.Books.ElementAt(i).publishDate)</td>
                <td>@Html.EditorFor(x => x.books.Books.ElementAt(i).author.name)</td>
            </tr>
            i++;
        }
    </table>
    }
</div>